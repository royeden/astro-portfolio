---
import normalizeAstroClassListProps from "~utils/normalizeAstroClassListProps";

export interface Props extends astroHTML.JSX.HTMLAttributes {
  alt: string;
  src: string;
  height?: number;
  width?: number;
}

const { alt, classList, src, ...props } = normalizeAstroClassListProps(
  Astro.props as Props
);
---

<img {...props} class:list={classList} src={src} alt={alt} loading="lazy" />
