---
import PageTransition from "~components/Base/PageTransition.astro";
import TextRegular from "~components/Base/TextRegular.astro";
import TextTitle from "~components/Base/TextTitle.astro";
import MainLayout from "~layouts/MainLayout.astro";

import me from "~posts/me.png";
---

<MainLayout
  head={{
    image: me,
    description: "Roy Eden: Developer, Musician, and Artist...",
    pageType: "Not Found",
    title: "Roy Eden - Not Found",
    url: "https://",
  }}
>
  <PageTransition>
    <div class="flex flex-col items-center pt-8 w-full">
      <div class="w-full space-y-2 px-2 text-center">
        <TextTitle class="w-full h-full">Oh no!</TextTitle>
        <TextRegular class="px-2">
          It seems like you've attempted to access a page that doesn't exist...
        </TextRegular>
      </div>
    </div>
  </PageTransition>
</MainLayout>
